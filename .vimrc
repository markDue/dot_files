" vim configuration

set clipboard=unnamedplus
set mouse=a

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

set background=dark
set t_Co=256
colorscheme default 

"set cursorline 
"set cursorcolumn
set number 
set wrap 
"set colorcolumn 
"set colorcolumn=80

syntax on
set spelllang=en_us,fr_ch,ar_eg

" show file status
set ruler

set encoding=utf-8

set noswapfile
set nobackup
set hlsearch 
set incsearch 
set ignorecase

set visualbell
set ttyfast
"set showmode
"set showcmd
"set laststatus=2


set scrolloff=8
set signcolumn=yes 

"set updatetime=300
